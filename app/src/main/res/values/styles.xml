<resources>

    <!-- Base application theme. -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>  <!--define the color of app bar-->
        <item name="colorPrimaryDark">@color/colorPrimary</item> <!--define the color of status bar-->
        <item name="colorAccent">@color/colorAccent</item> <!--define the color of UI componene-->
    </style>
    <style name="AppTheme2DarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>  <!--define the color of app bar-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item> <!--define the color of status bar at the very top of the screen where battery,wifi signal other notifications are shown-->
        <item name="colorAccent">@color/colorAccent</item> <!--define the color of UI componene-->
    </style>




</resources>
