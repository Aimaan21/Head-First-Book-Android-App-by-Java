<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChapterIndex"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/purple_background">

    <TextView
        android:id="@+id/textViewLabelChapterIndex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chapter Index"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorWhite"
        android:text="Chapter 2"
        android:id="@+id/buttonChapter2"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textViewLabelChapterIndex"
        android:layout_marginTop="50dp"
        android:onClick="onClickChapter2"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorWhite"
        android:text="Chapter 3"
        android:id="@+id/buttonChapter3"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonChapter2"
        android:layout_marginTop="50dp"
        android:onClick="onClickChapter3"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorWhite"
        android:text="Chapter 4"
        android:id="@+id/buttonChapter4"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonChapter3"
        android:layout_marginTop="50dp"
        android:onClick="onClickChapter4"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorWhite"
        android:text="Chapter 5"
        android:id="@+id/buttonChapter5"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonChapter4"
        android:layout_marginTop="50dp"
        android:onClick="onClickChapter5"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorWhite"
        android:text="Chapter 6"
        android:id="@+id/buttonChapter6"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonChapter5"
        android:layout_marginTop="50dp"
        android:onClick="onClickChapter6"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorWhite"
        android:text="Next"
        android:id="@+id/buttonNextIndex"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonChapter6"
        android:layout_marginTop="50dp"
        android:onClick="onClickNext"/>

</RelativeLayout>
</ScrollView>