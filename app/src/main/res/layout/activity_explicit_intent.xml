<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExplicitIntent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/chapter_background"/>

    <TextView
        android:id="@+id/explicitIntentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Example of Explicit Intent and Passing Data "
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25sp"
        />
    <TextView
        android:id="@+id/receivedMessageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Received Message :"
        android:layout_below="@id/explicitIntentLabel"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        />
    <TextView
        android:id="@+id/receivedMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/receivedMessageLabel"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        />
</RelativeLayout>