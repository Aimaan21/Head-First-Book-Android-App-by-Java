<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ChapterEightFragmentWorkOutDetails">

    <android.support.v7.widget.Toolbar
        android:id="@+id/WorkOutDetailsToolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        app:titleTextColor="@color/colorWhite"
        app:title="Workout Details"
        />
    <ImageView
        android:layout_below="@+id/WorkOutDetailsToolBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gym_workout_list_background"/>

    <TextView
        android:layout_below="@+id/WorkOutDetailsToolBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="5dp"
        android:text="title"
        android:textStyle="bold"
        android:id="@+id/textTitleWorkOut"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="description"
        android:id="@+id/textDescriptionWorkOut"
        android:layout_below="@+id/textTitleWorkOut"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"/>

</RelativeLayout>