<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StarbuckFood">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"/>
    <ImageView
        android:id="@+id/imageViewStarBuckFoodPhoto"
        android:layout_height="250dp"
        android:layout_width="match_parent" />

    <TextView
        android:id="@+id/textViewStarBuckFoodName"
        android:layout_below="@+id/imageViewStarBuckFoodPhoto"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="20sp"/>
    <TextView
        android:id="@+id/option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description :"
        android:textSize="25sp"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/textViewStarBuckFoodName"
        android:layout_marginTop="20sp"/>
    <TextView
        android:id="@+id/textViewStarBuckFoodDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/option"
        android:layout_marginTop="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"/>

</RelativeLayout>