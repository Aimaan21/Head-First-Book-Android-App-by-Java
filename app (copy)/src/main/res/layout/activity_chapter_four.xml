<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChapterFour">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/chapter_background"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:paddingBottom="20sp"
        android:paddingTop="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chapter Four: Activity LifeCycle"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginTop="115dp"
        android:textColor="@color/colorPrimaryDark"
        />
    <TextView
        android:id="@+id/textStopWatchLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(StopWatch App)"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginTop="145dp"
        android:textColor="@color/colorPrimaryDark"
        />
    <TextView
        android:id="@+id/textStopWatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="195dp"
        android:background="@color/colorPrimary"
        android:textSize="62sp"/>
    <Button
        android:id="@+id/buttonStartStopwatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:layout_below="@+id/textStopWatch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:onClick="onClickStartStopWatch"
        android:background="@color/colorPrimaryDark"/>
    <Button
        android:id="@+id/buttonStopStopwatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:layout_below="@+id/buttonStartStopwatch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:onClick="onClickStopStopWatch"
        android:background="@color/colorDeepRed"
        />
    <Button
        android:id="@+id/buttonRestartStopwatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restart"
        android:layout_below="@+id/buttonStopStopwatch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:onClick="onClickRestartStopWatch"
        android:background="@color/colorPrimary"
        />
    <Button
        android:id="@+id/buttonNextStopwatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_below="@+id/buttonRestartStopwatch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:onClick="onClickNext"
        android:background="@color/colorPrimaryDark"
        />

</RelativeLayout>