<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StarBuckDrink">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"/>
    <ImageView
    android:id="@+id/imageViewStarBuckCoffeePhoto"
    android:layout_height="250dp"
    android:layout_width="match_parent" />
    <TextView
        android:id="@+id/textViewStarBuckCoffeeName"
        android:layout_below="@+id/imageViewStarBuckCoffeePhoto"
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textViewStarBuckCoffeeDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewStarBuckCoffeeName"
        android:layout_marginTop="10sp"
        android:textStyle="bold"/>

</RelativeLayout>