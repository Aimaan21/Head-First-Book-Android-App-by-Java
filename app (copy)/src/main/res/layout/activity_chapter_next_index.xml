<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChapterNextIndex">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/purple_background"/>
    <TextView
        android:id="@+id/textViewLabelChapterNextIndex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chapter Index"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorWhite"
        android:text="Chapter 7"
        android:id="@+id/buttonChapter7"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textViewLabelChapterNextIndex"
        android:layout_marginTop="60dp"
        android:onClick="onClickChapter7"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorWhite"
        android:text="Chapter 8"
        android:id="@+id/buttonChapter8"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/buttonChapter7"
        android:layout_marginTop="50dp"
        android:onClick="onClickChapter8"/>
</RelativeLayout>